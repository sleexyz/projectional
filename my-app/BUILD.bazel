load("//:coarse.bzl", "base_dir", "step")
load("//:cargo.bzl", "cargo_build_env")

base_dir(
    name = "sources",
    path = "my-app",
)

step(
    name = "npm_install",
    srcs = [
        "package.json",
        "package-lock.json",
    ],
    cmd = "npm install",
    dir = ":sources",
)

step(
    name = "cargo_build",
    srcs = glob([
        "src/**/*",
        "Cargo.lock",
        "Cargo.toml",
    ]),
    cmd = "cargo build",
    dir = ":sources",
    env = cargo_build_env,
    target_compatible_with = [
        "@platforms//cpu:wasm32",
    ],
    deps = [
        "//puddlejumper:build.transitive",
    ],
)

step(
    name = "build",
    srcs = glob([
        "js/**/*",
        "index.html",
        "vite.config.ts",
        "tsconfig.node.json",
        "tsconfig.json",
    ]),
    cmd = "npm run build",
    dir = ":npm_install",
)
