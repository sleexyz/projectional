load("//:coarse.bzl", "dir_rule")

package(default_visibility = ["//visibility:public"])

dir_rule(
    name = "tree-sitter-puddlejumper",
    srcs = glob(
        ["**/*"],
        exclude = [
            ".gitignore",
            "node_modules/**/*",
            "target/**/*",
            "test/**/*",
        ],
    ),
    build_cmd = "cargo build --release",
)
