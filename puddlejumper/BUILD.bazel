load("//:coarse.bzl", "base_dir", "dir_test", "step")
load("//:cargo.bzl", "cargo_build_env", "cargo_with_tree_sitter_features")

package(default_visibility = ["//visibility:public"])

base_dir(
    name = "sources",
    path = "puddlejumper",
)

step(
    name = "build",
    srcs = glob(
        [
            "src/**/*",
            "Cargo.toml",
            "Cargo.lock",
        ],
    ),
    cmd = cargo_with_tree_sitter_features("build"),
    env = cargo_build_env,
    prev = ":sources",
    deps = [
        "//tree-sitter-puddlejumper:build",
    ],
)

step(
    name = "test_lib",
    cmd = cargo_with_tree_sitter_features("test --no-run"),
    env = cargo_build_env,
    prev = ":build.transitive",
)

dir_test(
    name = "test",
    cmd = cargo_with_tree_sitter_features("test"),
    prev = ":test_lib.transitive",
)
