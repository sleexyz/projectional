load("//:coarse.bzl", "dir", "dir_test")

package(default_visibility = ["//visibility:public"])

dir(
    name = "puddlejumper",
    srcs = glob(
        ["**/*"],
        exclude = [
            "BUILD.bazel",
            "target/**/*",
            ".gitignore",
        ],
    ),
    cmd = "cargo build",
    deps = [
        "//tree-sitter-puddlejumper",
    ],
)

dir_test(
    name = "test",
    cmd = "cargo test",
    dir = ":puddlejumper",
)
